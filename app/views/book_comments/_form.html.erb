 <%= form_with model: [@book, @book_comment], remote: true do |f| %>
    <div class="field">
      <div class="control">
        <%= f.text_area :comment,:size=>"90 x 5", class:"input" %>
        <%= f.hidden_field :book_id, value: @book.id %>
      </div>
    </div>
    <div class="field is-grouped">
      <div class="control">
        <%= f.submit '送信する', class:"button is-link form__submit" %>
      </div>
    </div>
  <% end %>